doctype html
html(data-ng-app='gogogo')
  head
    title Go-Go-Go
    link(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/lumen/bootstrap.min.css')
    // link(rel='stylesheet', type='text/css', href='/static/css/gogogo.css')
  body
    nav.navbar.navbar-fixed-top.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/', style='color: #000; font-weight: bold;')
            | GO-GO-GO
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav(data-ng-controller='navbarController')
            li(data-ng-class='{active: current_section == \'go\'}')
              a(href='#/go', data-ng-click='changeSection(\'go\')')
                | Go
    div(style='position:absolute;left:0px;top:0px;width:100%;height:100%;z-index:-1;')
      div(style='float:left;width:100%;padding-top: 40px;', data-ng-view)
    script(type='text/javascript', src='https://code.jquery.com/jquery-2.2.4.min.js')
    script(type='text/javascript', src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.7/angular.min.js')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.7/angular-route.min.js')
    script(type='text/javascript', src='https://maps.googleapis.com/maps/api/js?key=#{google_maps_api_key}')
    script(type='text/javascript', src='/static/js/gogogo.js')
